{
  "family": "task1",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::390402550922:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "app1",
      "image": "390402550922.dkr.ecr.us-east-1.amazonaws.com/registry1:latest", 
      "cpu": 0,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp",
          "name": "app1-3000-tcp",
          "appProtocol": "http"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/task1",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}
